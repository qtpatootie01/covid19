{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Top Vaccination Percentage",
    "width": 300,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/owid/covid-19-data/master/public/data/latest/owid-covid-latest.csv"
    },
    "transform": [
      {"calculate": "toNumber(datum.people_fully_vaccinated_per_hundred)", "as": "Fully Vaccinated Percentage"},
      {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "Fully Vaccinated Percentage", "order": "descending"}]
      },
      {"filter": "datum.rank <= top_n_rank"},
      {"filter": "datum.continent != \"\""}
    ],
    "params": [
      {
        "name": "top_n_rank", "value": 15,
        "bind": {
          "input": "range", "min": 1, "max": 40, "step": 1,
          "name": "Countries: "
        }
      }
    ],
    "encoding": {
  
    },
    "layer": [
      {
        "params": [{"name": "brush", "select": {"type": "interval", "encodings": ["y"]}}],
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "Fully Vaccinated Percentage",
            "type": "quantitative",
            "title": null,
            "aggregate": "mean"
          },
          "y": {
            "field": "location",
            "title": "Country",
            "type": "nominal",
            "axis": null,
            "sort": {
              "field": "Fully Vaccinated Percentage",
              "op": "average",
              "order": "descending"
            }
          },
          "color": {
            "field": "continent",
            "scale": {
              "domain": [
                "North America", 
                "South America", 
                "Europe", 
                "Africa", 
                "Asia", 
                "Oceania"],
              "range": [
                "#9be79e", 
                "#ffd693", 
                "#75bdff", 
                "#9c9191", 
                "#d265ec", 
                "#fe9aff"]
            },
            "legend": null
          },
          "opacity": {"condition": {"param": "brush", "value": 1}, "value": 0.5},
          "tooltip": [
            {
              "field": "location", 
              "type": "nominal", 
              "title": "Country"},
            {
                "field": "continent", 
                "type": "nominal", 
                "title": "Continent"
            },
            {
                "field": "new_vaccinations_smoothed", 
                "title": "New Vaccinations"}, 
            
            {
              "field": "total_vaccinations",
              "type": "quantitative",
              "title": "Total Vaccinations"
            },
            {
                "field": "Fully Vaccinated Percentage", 
                "type": "quantitative", 
                "title": "Fully Vaccinated (%)"
             },
            {
              "field": "last_updated_date", 
              "title": "Last Updated Date"
            }
          ]
        }
      },
      {
        "transform": [{"filter": {"param": "brush"}}],
        "mark": "rule",
        "encoding": {
          "x": {
            "aggregate": "mean",
            "field": "Fully Vaccinated Percentage",
            "type": "quantitative"
          },
          "color": {"value": "firebrick"},
          "size": {"value": 2}
        }
      },
      {
        "transform": [
          {"filter": {"param": "brush"}},
          {
            "aggregate": [
              {
                "op": "mean",
                "field": "Fully Vaccinated Percentage",
                "as": "mean_vax"
              }
            ],
            "groupby": ["brush"]
          },
          {"calculate": "'The selected countries are, on average,'", "as": "text_annotation"}
        ],
        "mark": {"type": "text", "align": "center", "dx": 0, "dy": 240},
        "encoding": {"text": {"field": "text_annotation"}, "color": {"value": "black"}}
      },
      {
        "transform": [
          {"filter": {"param": "brush"}},
          {
            "aggregate": [
              {
                "op": "mean",
                "field": "Fully Vaccinated Percentage",
                "as": "mean_vax"
              }
            ],
            "groupby": ["brush"]
          },
          {"calculate": "round(datum['mean_vax']) + '% fully vaccinated.'", "as": "text_annotation"}
        ],
        "mark": {"type": "text", "align": "center", "dx": 0, "dy": 255},
        "encoding": {"text": {"field": "text_annotation"}, "color": {"value": "black"}}
      }, 
      {
        "mark": {"type": "text", "align": "left", "x": 5},
        "encoding": {
          "y": {
            "field": "location",
            "title": "Country",
            "type": "nominal",
            "axis": null,
            "sort": {
              "field": "Fully Vaccinated Percentage",
              "op": "average",
              "order": "descending"
            }
          },
          "text": {"field": "location"},
          "color": {"value": "white"}
        }
      }
    ]
  }