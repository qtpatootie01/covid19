{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 825,
    "data": {
      "url": "https://raw.githubusercontent.com/owid/covid-19-data/master/public/data/owid-covid-data.csv"
    },
    "transform": [{"filter": "datum.location == 'World'"}],
    "layer": [
      {
        "mark": "rect",
        "encoding": {
          "x": {
            "field": "date",
            "timeUnit": "week",
            "type": "ordinal",
            "title": "Months (Sep 2021- Sep 2022)",
            "axis": {"labelAngle": 0, "format": "%B", "labelOverlap": true, "bandPosition": 0.5,
            "titleFontSize": 13, "titleFontWeight": 900}
          },
          "y": {
            "field": "date",
            "timeUnit": "day",
            "type": "ordinal",
            "title": "Day", 
            "axis": {"titleFontSize": 13, "titleFontWeight": 900}
          },
          "color": {
            "field": "new_cases",
            "aggregate": "mean",
            "type": "quantitative",
            "legend": {
                "title": "Number of Cases", 
                "tickCount": 5, 
                "orient": "left", 
                "titleFontSize": 12,
                "titleFontWeight": "bold",
                "labelFontSize": 12},
            "scale": {"scheme": "purpleblue"}
          },
          "tooltip": [
            {"field": "new_cases", 
            "type": "quantitative", 
            "title": "New Cases"},
            {"field": "date", 
            "type": "temporal", 
            "title": "Date"}
          ]
        }
      },
      {
        "mark": "rule",
        "encoding": {
          "x": {"value": 55},
          "y": {"value": -20},
          "x2": {"value": 55},
          "y2": {"value": 73},
          "color": {"value": "black"},
          "strokeWidth": {"value": 2}
        }
      },
      {
        "transform": [
          {
            "aggregate": [
              {
                "op": "max",
                "field": "new_cases",
                "as": "max_cases"
              }
            ]
          }
        ],
        "mark": {"type": "text", "align": "left", "dx": -355, "dy": -80, "fontSize": 13, "fontWeight": "bold"},
        "encoding": {
          "color": {"value": "black"},
          "text": {"value": "19/01/2022 has the most cases"}
          }
        }
    ]
  }